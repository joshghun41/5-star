            <Button Margin="10" Height="146" Width="171" BorderThickness="0" Background="Transparent"
                RenderTransformOrigin="0.5,0.5">
                <Path Name="starPath1" Fill="White" StrokeThickness="1" Stroke="Black" 
                  Stretch="Fill"
          Data="M 127,37 L 104,105 L 34,105 L 91,150 L 69,218 L 127,176 L 187,218 L 164,150 L 223,105 L 151,105 L 127,37" Height="108" Width="146"/>
                <Button.RenderTransform>
                    <RotateTransform x:Name="myTransform1"></RotateTransform>
                </Button.RenderTransform>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="myTransform1"
                                             Storyboard.TargetProperty="(RotateTransform.Angle)"
                                             From="0.0" To="360" Duration="0:0:1">
                                </DoubleAnimation>
                                <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"
                                                          Storyboard.TargetName="starPath1">
                                    <LinearColorKeyFrame KeyTime="0:0:0.5"
                                                 Value="Yellow"/>
                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
